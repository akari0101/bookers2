<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>

    <div class="error-message">
      <% if @book.errors.any? %>
      <%= @book.errors.count %> errors detected.
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

      <%= form_with model: @book do |f| %>
        <div class="book_title">Title</div>
          <%= f.text_field :title %>

        <div class="book_opinion">Opinion</div>
          <%= f.text_area :body %>

        <div class="update">
          <%= f.submit "Update book", class:"btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>

  </div>
</div>
